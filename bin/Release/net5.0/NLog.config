<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- the targets to write to -->
  <variable name="errorname" value="../../../Logs/" />

  <variable name="maintracer" value="../../../Logs/" />
  <targets>
    <!-- write logs to file  -->
    <target name="ErrorWrite" xsi:type="File"
            fileName="${errorname}/logs/${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${message}" />

    <target name="mainwrite" xsi:type="File"
            fileName="${maintracer}/logs/${shortdate}.log" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="ErrorLog" minlevel="Error" writeTo="ErrorWrite" />

    <logger name="*" minlevel="Trace" writeTo="mainwrite" />
  </rules>
</nlog>