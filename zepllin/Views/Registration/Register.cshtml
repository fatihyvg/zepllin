@model NormalUser
@{
    IgnoreBody();
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Registration | Zepllin</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta name="description" content="Zepllin Register">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#212121">
    <link rel="manifest" href="@Url.Content(UrlPaths.pwapath)" />
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content(UrlPaths.favicon16x16)">
    <link rel="icon" type="image/png" sizes="32x32" href="@Url.Content(UrlPaths.favicon32x32)">
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content(UrlPaths.favicon180x180)">
    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.bulmacss)" />
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.sitecss)" />
        <script type="text/javascript" src="@Url.Content(UrlPaths.jquery)"></script>
        <script type="text/javascript" src="@Url.Content(UrlPaths.jqueryvalidatescript)"></script>
        <script type="text/javascript" src="@Url.Content(UrlPaths.infoscript)"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.bulmacss)" />
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.minsitecss)" />
        <script type="text/javascript" src="@Url.Content(UrlPaths.jquery)"></script>
        <script type="text/javascript" src="@Url.Content(UrlPaths.jqueryvalidatescript)"></script>
        <script type="text/javascript" src="@Url.Content(UrlPaths.mininfoscript)"></script>
    </environment>
</head>
<body>
    <section class="hero is-fullheight hero-background is-fullmobile is-fulldesktop is-fulltablet is-fullhd is-fullwidescreen">
        <div class="hero-body">
            <div class="container has-text-centered is-fullhd is-widescreen">
                <div class="column is-4 is-offset-4">
                    <form method="post" asp-controller="Registration" asp-action="Register">
                        <div class="box">
                            <p class="subtitle is-4 has-text-black">Registration:</p>
                            <div class="field">
                                <label class="label">User Name:</label>
                                <span asp-validation-for="UserName" class="is-danger"></span>
                                <div class="control">
                                    <input class="input is-medium  is-black" asp-for="UserName" aria-label="UserName" type="text" autocomplete="off"  />
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Email:</label>
                                <span asp-validation-for="Email" class="is-danger"></span>
                                <div class="control">
                                    <input class="input is-medium is-black" asp-for="Email" aria-label="Email" type="email" autocomplete="off"  />
                                </div>
                            </div>
                            <div class="field">
                                <span asp-validation-for="UserPassword" class="is-danger"></span>
                                <label class="label">Password:</label>
                                <div class="control">
                                    <input class="input is-medium is-black" aria-label="Password" asp-for="UserPassword" type="password" autocomplete="off" />
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <div asp-validation-summary="ModelOnly" class="is-danger">
                                    </div>
                                    <input class="button is-fullwidth is-black has-text-white" type="submit" value="Register" />
                                    @if (!string.IsNullOrEmpty(nameof(ViewBag.Message)))
                                    {
                                        <label class="label has-text-info-dark">@ViewBag.Message</label>
                                    }
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>