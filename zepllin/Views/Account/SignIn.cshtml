@model NormalLogin
@{
    IgnoreBody();
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Login | Zepllin</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta name="description" content="Zepllin Login">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#212121">
    <link rel="manifest" href="@Url.Content(UrlPaths.pwapath)" />
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content(UrlPaths.favicon16x16)">
    <link rel="icon" type="image/png" sizes="32x32" href="@Url.Content(UrlPaths.favicon32x32)">
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content(UrlPaths.favicon180x180)">
    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.bulmacss)" />
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.sitecss)" />
        <script type="text/javascript" src="@Url.Content(UrlPaths.jquery)"></script>
        <script type="text/javascript" src="@Url.Content(UrlPaths.jqueryvalidatescript)"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.bulmacss)" />
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.minsitecss)" />
        <script type="text/javascript" src="@Url.Content(UrlPaths.jquery)"></script>
        <script type="text/javascript" src="@Url.Content(UrlPaths.jqueryvalidatescript)"></script>
    </environment>
</head>
<body>
    <main class="hero is-fullheight hero-background is-fullmobile is-fulldesktop is-fulltablet is-fullhd is-fullwidescreen">
        <div class="hero-body">
            <div class="container has-text-centered is-fullhd is-widescreen">
                <div class="column is-4 is-offset-4">
                    <div class="box">
                        <form method="post" asp-controller="Account" asp-action="SignIn" asp-route-returUrl="@ViewData["returnUrl"]">
                            <p class="subtitle is-4 is-4-fullhd is-4-mobile is-4-tablet is-4-desktop is-4-widescreen has-text-black">Login:</p>
                            <div asp-validation-summary="ModelOnly" class="is-danger"></div>
                            <div class="field">
                                <label class="label has-text-black is-family-sans-serif " asp-for="UserName">User Name:</label>
                                <span asp-validation-for="UserName" class="is-danger"></span>
                                <div class="control">
                                    <input asp-for="UserName" class="input is-medium is-black" type="text" />
                                </div>
                            </div>
                            <div class="field">
                                 <label class="label has-text-black is-family-sans-serif " asp-for="UserPassword">Password:</label>
                                <span asp-validation-for="UserPassword" class="is-danger"></span>
                                <div class="control">
                                    <input asp-for="UserPassword" class="input is-medium is-black" type="password" />
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                   <input class="button is-fullwidth is-black has-text-white is-family-sans-serif" type="submit" value="Sign İn" autocomplete="off" />
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <a href="@Url.Action("Index","ForgotPassword")" rel="nofollow" class="has-text-black is-size-7 is-size-7-desktop is-size-7-fullhd is-size-7-mobile is-size-7-tablet is-size-7-widescreen member">Forgot Password</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>

