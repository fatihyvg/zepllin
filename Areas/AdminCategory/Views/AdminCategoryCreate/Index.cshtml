<!DOCTYPE html>
<html lang="tr">
<head>
    <title>@UrlPaths.title</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta name="description" content="@UrlPaths.metadecription">
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content(UrlPaths.favicon16x16)">
    <link rel="icon" type="image/png" sizes="32x32" href="@Url.Content(UrlPaths.favicon32x32)">
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content(UrlPaths.favicon180x180)">
    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.bulmacss)" />
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.sitecss)" />
        <script type="text/javascript" src="@Url.Content(UrlPaths.jquery)"></script>
        <script type="text/javascript" src="@Url.Content(UrlPaths.jqueryunobtrusiveajax)"></script>
        <script type="text/javascript" src="@Url.Content(UrlPaths.infoscript)"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.bulmacss)" />
        <link rel="stylesheet" type="text/css" href="@Url.Content(UrlPaths.minsitecss)" />
        <script type="text/javascript" src="@Url.Content(UrlPaths.jquery)"></script>
        <script type="text/javascript" src="@Url.Content(UrlPaths.jqueryunobtrusiveajax)"></script>
        <script type="text/javascript" src="@Url.Content(UrlPaths.mininfoscript)"></script>
    </environment>
</head>
<body>
    @await Component.InvokeAsync("AdminHeader")
    <div class="container">
        <div class="columns is-multiline is-centered mt-2">
            <div class="column">
                <form method="post" asp-area="AdminCategory" asp-controller="AdminCategoryCreate" asp-action="CreateCategory" data-ajax="true" data-ajax-method="post" data-ajax-complete="categorycomplete" data-ajax-failure="categoryfailure">
                    <input class="input is-medium is-black is-fullwidth" type="text" name="category" placeholder="Kategori Ekle" />
                    <input class="button is-medium is-black is-fullwidth has-text-white mt-2" type="submit" value="Kategori Ekle" />
                </form>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="columns is-multiline is-centered mt-2">
                <div class="column">
                    <p class="is-size-6 has-text-black">@item.CategoryName</p>
                </div>
                <div class="column">
                    <form method="post" asp-area="AdminCategory" asp-controller="AdminCategoryCreate" asp-action="DeleteCategory" asp-route-delid="@item.CategoryId" data-ajax="true" data-ajax-method="post" data-ajax-complete="categorydeletecomplete" data-ajax-failure="categorydeletefailure">
                        <input class="button is-small is-fullwidth is-black has-text-white" type="submit" value="Sil" />
                    </form>
                </div>
            </div>
        }
    </div>
</body>
</html>
